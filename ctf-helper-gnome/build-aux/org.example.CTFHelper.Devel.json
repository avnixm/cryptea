{
  "app-id": "org.example.CTFHelper",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "command": "ctf-helper",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--filesystem=xdg-data/ctf-helper:rw",
    "--filesystem=xdg-documents:rw"
  ],
  "build-options": {
    "env": {
      "OFFLINE_BUILD": "1"
    }
  },
  "modules": [
    {
      "name": "python3-markdown2",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-deps --no-index --find-links=python-deps markdown2"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "python-deps"
        }
      ]
    },
    {
      "name": "python3-pynacl",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-deps --no-index --find-links=python-deps PyNaCl"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "python-deps"
        }
      ]
    },
    {
      "name": "python3-cryptography",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-deps --no-index --find-links=python-deps cryptography"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "python-deps"
        }
      ]
    },
    {
      "name": "ctf-helper-gnome",
      "buildsystem": "meson",
      "config-opts": [
        "-Doffline-build=true"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ]
}
